{
	"compilerOptions": {
		"strict": false,                        // Turn off strict mode
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2019",
		"lib": ["es2019", "es2020", "es2022"],
		"removeComments": true,
		"useUnknownInCatchVariables": false,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": false,                 // Allow implicit any
		"noImplicitReturns": false,             // Don't require return statements
		"declaration": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"sourceMap": true,
		"skipLibCheck": true,                   // Skip type checking of declaration files
		"strictNullChecks": false,              // Disable strict null checks
		"resolveJsonModule": true,
		"noEmitOnError": false,                 // Output files even when there are errors
		"suppressImplicitAnyIndexErrors": true, // Suppress index signature errors
	},
	"include": ["nodes", "credentials", "*.ts", "*.js"]
}
